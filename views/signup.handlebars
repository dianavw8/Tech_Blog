



<div class="login-container">
  <h2>Sign Up</h2>
    <div class="card">

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-login">Name:</label>
        <input class="form-input form-control" type="text" id="name-login" />
      </div>
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <label for="password-confirm">Confirm Password:</label>
        <input class="form-input form-control" type="password" id="password-confirm" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
                    <a href="/login" id="login" class="right-choice">Login Instead</a>

      </div>
    </form>
</div>



<script src="/js/signup.js"></script>
