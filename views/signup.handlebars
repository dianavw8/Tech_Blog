<h2>Sign Up</h2>

<form class="form signup-form">
  <div class="form-group">
    <label for="name-login">Name:</label>
    <input class="form-input" type="text" id="name-login" />
  </div>
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <label for="password-confirm">Confirm Password:</label>
    <input class="form-input" type="password" id="password-confirm" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
        <a href="/login" id="login">Login Instead</a>
</form>

<script src="/js/signup.js"></script>
