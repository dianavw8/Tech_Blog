
<div class="login-container">

  <h2>Login</h2>
  <div class="card">
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input form-control" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="label label-default">Password:</label>
        <input class="form-input form-control" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
         <a href="/signup" id="signup" class="right-choice">Sign Up Instead</a>
      </div>
             

    </form>
  </div>

</div>

<script src="/js/login.js"></script>
